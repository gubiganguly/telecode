<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.casperbot</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>__CASPERBOT_DIR__/scripts/monitor.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__CASPERBOT_DIR__</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>ThrottleInterval</key>
    <integer>5</integer>

    <key>StandardOutPath</key>
    <string>__CASPERBOT_DIR__/logs/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>__CASPERBOT_DIR__/logs/launchd-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>
</dict>
</plist>
